<div class="row">
  <div class="col-md-6 m-auto mb-5">
    <div class="row mt-5">
      <div class="mt-3 row justify-content-center">
        <label class="col-2"><span class="text-danger">*</span>必填欄位</label>
        <h4 class="col-4 text-center">請輸入你的支出</h4>
      </div>
    </div>
    <form action="/records/new" method="POST" class="row" id="form">
      <div class="mt-5 row justify-content-center align-items-center">
        <label class="col-2" for="name">名稱<span class="text-danger">*</span>：</label>
        <div class="col-4">
          <input class="form-control" type="text" name="name" id="name" value="{{name}}" required>
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">請輸入名稱</div>
        </div>
      </div>
      <div class="mt-5 row justify-content-center align-items-center">
        <label class="col-2" for="date">日期<span class="text-danger">*</span>：</label>
        <div class="col-4">
          <input class="col-4 form-control" type="date" name="date" id="date" value="{{date}}" required>
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">請輸入日期</div>
        </div>
      </div>
      <div class="mt-5 row justify-content-center align-items-center">
        <label class="col-2" for="category">類別<span class="text-danger">*</span>：</label>
        <div class="col-4">
          <select class="form-control" name="category" id="category">
            {{#if categoryOne}}
            <option value="{{categoryOne._id}}">{{categoryOne.name}}</option>
            {{/if}}
            {{#each categories}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">請輸入類別</div>
        </div>
      </div>

      <div class="mt-5 row justify-content-center align-items-center">
        <label class="col-2" for="amount">金額<span class="text-danger">*</span>：</label>
        <div class="col-4">
          <input class="form-control" type="number" name="amount" id="amount" value="{{amount}}" required>
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">請輸入金額</div>
        </div>
      </div>
      <div class="mt-5 row justify-content-center">
        <label class="col-2"></label>
        <button class="col-4 btn btn-primary" id="submitButton" type="submit">新增支出</button>
      </div>
    </form>
  </div>
</div>
<script>
  const submitButton = document.querySelector('#submitButton')
  const form = document.querySelector('#form')
  submitButton.addEventListener('click', function onSubmitButtonClicked(event) {
    form.classList.add('was-validated')
  })
</script>