{{#if verificationCode}}
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card card-body mt-5 mb-5">
        <a class="text-info" href="/users/login"><i class="fas fa-arrow-left"></i></a>
        <h2 class="mb-3 text-center">Verification Code</h2>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          驗證碼已寄出！
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <form action="/users/reset" method="POST">
          <div class="form-group">
            <input type="text" name="verificationCode" id="verificationCode" placeholder="Enter Verification Code" class="form-control" required>
            <input type="hidden" id="verificationCodeTrue" name="verificationCodeTrue" value="{{verificationCode}}">
          </div>
          <div class="d-grid gap-2 mt-3">
            <button type="submit" class="btn btn-info btn-block text-white">Verify</button>
          </div>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card card-body mt-5 mb-5">
        <a class="text-info" href="/users/login"><i class="fas fa-arrow-left"></i></a>
        <h2 class="mb-3 text-center">Reset Password</h2>
        {{> message}}
        {{#if verificationState}}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            驗證成功！
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {{/if}}
        <form action="/users/reset" method="POST">
          <div class="form-group mb-3">
            <input type="email" name="email" id="email" placeholder="Enter Email" class="form-control" value="{{email}}">
          </div>
          {{#if verificationState}}
          {{else}}
            <div class="form-group mb-3">
              <input type="password" name="oldPassword" id="oldPassword" placeholder="Enter Old Password"
                class="form-control">
            </div>
          {{/if}}
          <div class="form-group mb-3">
            <input type="password" name="newPassword" id="newPassword" placeholder="Enter New Password"
              class="form-control">
          </div>
          <div class="form-group mb-3">
            <input type="password" name="confirmNewPassword" id="confirmNewPassword" placeholder="Confirm New Password"
              class="form-control">
          </div>
          <div class="d-grid gap-2 mt-3">
            <button type="submit" class="text-white btn btn-info">Reset Password</button>
          </div>
        </form>
      </div>
    </div>
  </div>
{{/if}}