<div class="row">
  <div class="col-md-6 m-auto">
    <div class="card card-body mt-5 mb-5">
      <h1 class="mt-3 text-center">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group mb-3">
          <label for="email">Email<span class="text-danger">*</span></label>
          <input type="email" name="email" id="email" placeholder="Enter Email" class="form-control" value="{{email}}">
        </div>
        <div class="form-group mb-3">
          <label for="password">Password<span class="text-danger">*</span></label>
          <input type="password" name="password" id="password" placeholder="Enter Password" class="form-control" value="{{password}}">
        </div>
        <div class="d-grid gap-2 mt-5">
          <button type="submit" class="text-white btn btn-info">Login</button>
          <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          <a href="/auth/facebook" class="btn btn-md btn-primary mb-2" style="background-color: #3b5998;">
            <i class="fab fa-facebook-f me-2"></i>
            Login with Facebook
          </a>
          <a href="/auth/google" class="btn btn-md btn-block btn-primary" style="background-color: #dd4b39;">
            <i class="fab fa-google me-2"></i>
            Login with Google
          </a>
        </div>
      </form>
      <p class="lead mt-3 d-flex justify-content-around">
        <span>No Account? <a class="text-decoration-none" href="/users/register">Register</a></span>
        <span><a class="text-decoration-none" href="/users/forget">Forget Password</a></span></span>
        <span><a class="text-decoration-none" href="/users/reset">Reset Password</a></span></span>
      </p>
    </div>
  </div>
</div>